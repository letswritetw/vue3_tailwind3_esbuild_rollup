{
  "name": "vue3_tailwind3_esbuild_rollup",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "dev-js": "./node_modules/.bin/esbuild ./src/main.js --bundle --sourcemap --outfile=./dist/main.min.js --watch",
    "dev-tailwind": "npx tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.min.css --watch",
    "build-js": "rollup --config",
    "build-tailwind": "npx tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.min.css --minify",
    "remove-dist-js": "rm -f dist/main.min.js.map dist/main.min.js",
    "build": "yarn remove-dist-js && yarn build-js && yarn build-tailwind"
  },
  "dependencies": {
    "tailwindcss": "^3.1.8",
    "vue": "^3.2.38"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "esbuild": "^0.15.6",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}